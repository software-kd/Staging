            $(".d8tab3").removeClass("d8activelink");
            $(".d8tab4").removeClass("d8activelink");
        }
        else if (objVal == "tab2") {
            $(".div8_tab_container2").fadeIn();
            $(".div8_tab_container1").hide();
            $(".div8_tab_container3").hide();
            $(".div8_tab_container4").hide();
