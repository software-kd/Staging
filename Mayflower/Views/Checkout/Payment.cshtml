                        <small style="color:red;">
                            (total selling: @allPrd.Sum(x => x.PricingDetail.ProductTotalAmount).ToString("n2"))
                            (total cost: @allPrd.Sum(x => x.PricingDetail.ProductTtlAmount_SupplierSource).ToString("n2"))
                        </small>
