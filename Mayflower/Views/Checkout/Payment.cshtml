                <div class="clear"></div>

                <div class="payment-btn-area">
                    @if (Core.IsEnableAdyen)
                    {
                        <a href="javascript:;" class="ars-payment"><button type="submit" class="ars-btn ipay_paynow_button">Pay Now</button></a>
