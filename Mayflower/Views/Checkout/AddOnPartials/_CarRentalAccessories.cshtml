@using Alphareds.Module.Common;
@using Alphareds.Module.Model;
@using Alphareds.Module.Model.Database;
@model Alphareds.Module.Model.ProductCarRental

@{
    string tripid = ViewBag.tripid ?? Request.QueryString["tripid"];
    string affiliationId = Request.QueryString["affiliationId"];
    var accessories = Model.VehicleSelected.VehAvails.VehAvailCore.OptionalService;
}
<style>
    .label2 {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        font-size: 1rem;
        line-height: 1.5;
        color: #333;
        text-align: left;
    }
    .custom-control-label::before {
        border-radius: 4px;
        box-shadow: inset 0 0.25rem 0.25rem rgba(0, 0, 0, 0.1)
    }
</style>

<div class="addon-body">
    <div class="col-md-12">
        <p class="">Requests cannot be guaranteed as they are subject to availability. Payment due at pick-up.</p>
    </div>
    <div class="col-md-12">
        @Html.Hidden("CarOptServices")
        @foreach (var accessory in accessories)
        {
            <div class="form-check custom-control-inline">
                <input type="radio" class="custom-control-input" name="CarOptionalService" id="OptService_@accessory.OptionalServiceID" data-name="@accessory.Name" data-tick="@accessory.OptionalServiceID" data-price="@accessory.Price.ToString("n2")">
                <label class="custom-control-label label2" for="OptService_@accessory.OptionalServiceID" contenteditable="true">@accessory.Description (@accessory.Name)</label>
            </div>
        }
    </div>
</div>
